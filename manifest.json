{
  "manifest_version": 3,
  "name": "Lovable Credits Generator",
  "version": "1.1.5",
  "description": "Gera créditos para sua conta lovable através de um link de indicação.",
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
